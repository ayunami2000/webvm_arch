FROM --platform=i386 i386/debian:bookworm-slim
ARG DEBIAN_FRONTEND=noninteractive
RUN apt-get clean && apt-get update && apt-get -y upgrade
RUN apt-get -y install build-essential dh-autoreconf openbox xterm nano git
WORKDIR /root/
RUN git clone --recurse-submodules https://github.com/saitoha/xserver-SIXEL && cd xserver-SIXEL && ./autogen.sh && make && make install && cd .. && rm -rf xserver-SIXEL
RUN apt-get -y remove build-essential git && apt-get -y autoremove && apt-get -y autoclean
RUN rm -rf /var/lib/apt/lists/*
ENV HOME="/root" TERM="xterm" USER="root" SHELL="/bin/bash" EDITOR="nano" LANG="en_US.UTF-8" LC_ALL="C"
CMD [ "/bin/bash" ]
